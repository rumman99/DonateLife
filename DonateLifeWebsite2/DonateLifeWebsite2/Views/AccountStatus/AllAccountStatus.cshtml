
@model IEnumerable<DonateLifeWebsite2.Models.AccountStatusMV>

@{
    ViewBag.Title = "All Account Status";
}

<div class="container">
    <div class="col-md-6 margin-top-30">
        <div class="contact-form-block">
            <h2 class="contact-title">Account Status</h2>

            <p>
                @Html.ActionLink("New Account Status", "Create", null, new { @class = "btn-dynamism" })
            </p>
            <table class="table table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountStatus)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountStatus)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.AccountStatusID }, new { @class = "btn btn-primary" }) |

                            @Html.ActionLink("Delete", "Delete", new { id = item.AccountStatusID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>





