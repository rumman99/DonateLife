@model IEnumerable<DatabaseLayer.CityTable>

@{
    ViewBag.Title = "Index";
}


    <div class="container">
        <div class="col-md-6 margin-top-30">
            <div class="contact-form-block">
                <h2 class="contact-title">All Cities</h2>

                <p>
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-custom" })
                </p>
                <table class="table table-hover">
                    <tr>
                        <th>
                            City
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td class="text-right">
                                @Html.ActionLink("Edit", "Edit", new { id = item.CityID }, new { @class = "btn btn-custom" })

                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>

