
@model DonateLifeWebsite2.Models.BloodBankStockMV

@{
    ViewBag.Title = "Complete";
}
<style>

    .btn-theme {
        line-height: 24px;
        font-size: 16px;
        font-weight: 600;
        padding: 12px 24px;
    }
</style>

<div class="container">
    <div class="col-md-12 margin-top-30">
        <div class="contact-form-block">
            <h2 class="contact-title">Complete Request For Blood</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()




                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.BloodBankID)
                @Html.HiddenFor(model => model.BloodGroupID)
                @Html.HiddenFor(model => model.BloodBankStockID)
                <h3>Blood Bank Details</h3>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Blood Bank
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.BloodBankTitle)
                    </dd>



                    <dt>
                        Required Blood Group
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.BloodGroup)
                    </dd>

                </dl>









                <div class="form-group">


                    Enter Blood Quantity(Litre)
                    @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })

                </div>



                <div class="form-group">

                    <input type="submit" style="float:right;" value="Complete Request" class="btn btn-custom float-end" />


                </div>

            }


        </div>
    </div>
</div>

