
@model DonateLifeWebsite2.Models.RegistrationMV
@{
    ViewBag.Title = "Seeker Registration";
}

<h2>Seeker User</h2>
<div class="appointment-form-wrapper text-center clearfix">
    <h3 class="join-heading">Seeker Registration Form</h3>
    @using (Html.BeginForm("SeekerUser", "Registration", FormMethod.Post, new { @class = "appointment-form" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserTypeID)
        @Html.HiddenFor(model => model.User.UserID)
        @Html.HiddenFor(model => model.User.UserName)
        @Html.HiddenFor(model => model.User.Password)
        @Html.HiddenFor(model => model.User.Accountstatus)
        @Html.HiddenFor(model => model.User.AccountStatusID)
        @Html.HiddenFor(model => model.User.EmailAddress)
        @Html.HiddenFor(model => model.UserTypeID)
        @Html.HiddenFor(model => model.User.Description)

        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.User.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Seeker Name", @type = "text" } })
            @Html.ValidationMessageFor(model => model.User.UserName, "", new { @class = "text-danger" })

        </div>
        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Seeker.Age, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Age" } })
            @Html.ValidationMessageFor(model => model.Seeker.Age, "", new { @class = "text-danger" })

        </div>
        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.ContactNo, new { htmlAttributes = new { @class = "form-control", placeholder = "Contact No" } })
            @Html.ValidationMessageFor(model => model.ContactNo, "", new { @class = "text-danger" })

        </div>
        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Seeker.NID, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter NID", @type = "number" } })
            @Html.ValidationMessageFor(model => model.Seeker.NID, "", new { @class = "text-danger" })

        </div>

        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Seeker.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Address" } })
            @Html.ValidationMessageFor(model => model.Seeker.Address, "", new { @class = "text-danger" })

        </div>

        <div class="form-group col-md-6">
            <div class="select-style">
                @Html.DropDownList("CityID", null, "--Your City--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CityID, "", new { @class = "text-danger" })



            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="select-style">
                @Html.DropDownList("GenderID", null, "--Gender--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GenderID, "", new { @class = "text-danger" })



            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="select-style">
                @Html.DropDownList("BloodGroupID", null, "--Select Blood Group--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BloodGroupID, "", new { @class = "text-danger" })



            </div>
        </div>












        <div class="form-group col-md-12 col-sm-12 col-xs-12">
            <button id="btn_submit" class="btn btn-custom" type="submit">Submit</button>
        </div>

    }
</div>


