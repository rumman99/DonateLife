
@model DonateLifeWebsite2.Models.BloodGroupsMV

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <div class="col-md-6 margin-top-30">
        <div class="contact-form-block">
            <h2 class="contact-title">Update Blood Group</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()



                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.BloodGroupID)

                <div class="form-group">

                    @Html.LabelFor(model => model.BloodGroup, htmlAttributes: new { @class = "control-label col-md-12" })

                    @Html.EditorFor(model => model.BloodGroup, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BloodGroup, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">

                    <input type="submit" style="float:right;" value="Update" class="btn btn-custom float-end" />
                    @Html.ActionLink("Back", "AllBloodGroups", null, new { @class = "btn btn-theme-invert" })

                </div>

            }


        </div>
    </div>
</div>

