
@model IEnumerable<DonateLifeWebsite2.Models.BloodGroupsMV>

@{
    ViewBag.Title = "All Blood Groups";
}

<div class="container">
    <div class="col-md-6 margin-top-30">
        <div class="contact-form-block">
            <h2 class="contact-title">Blood Groups</h2>

            <p>
                @Html.ActionLink("New Blood Group", "Create", null, new { @class = "btn-dynamism" })
            </p>
            <table class="table table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BloodGroup)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BloodGroup)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.BloodGroupID }, new { @class = "btn btn-primary" }) |

                            @Html.ActionLink("Delete", "Delete", new { id = item.BloodGroupID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>



